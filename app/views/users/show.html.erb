<div class="row">
    <div class="col-md-3 text-center">
        <%= image_tag @user.profile.avatar.url %>
    </div>
    <div class="col-md-9">
        <h1><%=@user.profile.first_name %></h1><br/>
        <h3><%=@user.profile.job_title %></h3><br/>
        <div class="well"><%=@user.profile.description %></div><br/>
        <% if current_user.plan_id ==2 %>
            <%=@user.profile.phone_number %><br/>
            <%=@user.profile.contact_email %><br/>
        <% end %>
        
    </div>
</div>
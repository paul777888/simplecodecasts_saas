<div class="row">
    <div class = "col-md-8 col-md-offset-2">
      <ul class="list-unstyled">
        <% @users.each do |user| %>
            <%if user.profile%>
              <li>
                 <div class="well row <%=cycle('white-bg','') %>">
                   <div class = "col-sm-4 text-center"> 
                      <% if user.profile.avatar%>
                        <%= link_to user do%>
                            <%=image_tag user.profile.avatar.url(:thumbnail) %>
                        <%end%>
                      <%end%> 
                   </div> 
                   <div>
                       <h2><%= user.profile.first_name%> <%= user.profile.job_title%></h2>
                       <p><%= user.profile.description%></p>
                   </div>
                 </div> 
              </li>     
            <% end %>
        <%end%>
      </ul>
    </div>
</div>